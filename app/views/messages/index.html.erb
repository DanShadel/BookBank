<p id="notice"><%= notice %></p>



<div class="container">

<div class="messages-page">
<h1>Inbox</h1>


    <div class="row">
      <div class="col-md-4">
      <h2>Messages</h2>
    </div>

    
      <div class="col-md-8">
     <h2> </h2>
    </div>
     </div><!--row ends-->
    
    

    <% @unique_users.each do |message| %>
     
  

      <div class="row">
      <% if message.recipient_id? %>
        <div class="col-md-4">
          
            <%= message.recipient.username %>

        </div>

        <div class="col-md-8">
          <%= link_to 'Chat!', messages_reply_path(:owner => message.recipient_id), class: "btn btn-primary"  %>
        </div>


      <% else %>

        <div class="col-md-4">
          
            <%= message.owner.username %>

        </div>

        <div class="col-md-8">
          <%= link_to 'Chat!', messages_reply_path(:owner =>  message.owner_id), class: "btn btn-primary"  %>
        </div>


        <% end %>

    </div><!--row ends-->
    


    <% end %>


