<p id="notice"><%= notice %></p>

<h1>Inbox</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Owner</th>
      <th>Recipient</th>
      <th>Read</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.content %></td>
        <td><%= message.owner_id %></td>
        <td><%= message.recipient_id %></td>
        <td><%= message.read %></td>
        <td><%= link_to 'Show', message %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

