
<%= simple_form_for @textbook do |f| %>

  <% if textbook.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(textbook.errors.count, "error") %> prohibited this textbook from being saved:</h2>


        <ul>
        <% textbook.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <!-- Simple Form for textbooks -->

  <%= f.input :title%>
  <%= f.input :author%>
  <%= f.input :edition%>
  <%= f.input :section%>
  <%= f.input :condition, as: :radio_buttons, collection: ["New", "Good", "Okay", "Bad"] %>
  <%= f.input :isbn_10, :input_html => {:minlength => 10 , maxlength: 10} %>
  <%= f.input :isbn_13, :input_html => {:minlength => 13 , maxlength: 13} %>
  <%= f.input :price%>
  <%= f.input :description%>
  <%= f.input :amount_used, as: :radio_buttons, collection: ['Unknown', 'A little', 'Some', 'A lot']%>


  <% if @textbook.image? %>

      <%= image_tag @textbook.image.url %>
      <br>

      <%= f.check_box :remove_image %>
  <% end %>

  <%= f.file_field :image %>
  <%= f.button :submit %>
  
<% end %>


