<p id="notice"><%= notice %></p>

<h1>Textbooks</h1>

<%= form_tag(textbooks_path, method: :get) do %>
  <%= text_field_tag :title %>
  <%= submit_tag 'Search', name: nil %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Condition</th>
      <th>Isbn</th>
      <th>email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @textbooks.each do |textbook| %>
      <tr>
        <td><%= textbook.title %></td>
        <td><%= textbook.condition %></td>
        <td><%= textbook.isbn %></td>
        <td><%= textbook.email%></td>
        <td><%= link_to 'Show', textbook %></td>
        <td><%= link_to 'Edit', edit_textbook_path(textbook) %></td>
        <td><%= link_to 'Destroy', textbook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>
<br>
<%= link_to 'New Textbook', new_textbook_path %>
